{
  "name": "intelligent-tasks-plugin",
  "displayName": "Intelligent Tasks Manager",
  "description": "Интеллектуальное управление TODO-комментариями (TODO, FIXME, BUG, NOTE) в VS Code",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "intelligentTasksView",
          "name": "Intelligent Tasks"
        }
      ]
    },
    "commands": [
      {
        "command": "intelligentTasks.scanWorkspace",
        "title": "Сканировать рабочее пространство"
      },
      {
        "command": "intelligentTasks.markAsDone",
        "title": "Отметить задачу как выполненную"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Intelligent Tasks",
      "properties": {
        "intelligentTasks.todoPatterns": {
          "type": "array",
          "default": [
            "TODO",
            "FIXME",
            "BUG",
            "NOTE"
          ],
          "description": "Теги, которые будут отслеживаться"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "webpack --mode production",
    "compile": "webpack",
    "watch": "webpack --watch",
    "test": "mocha --require ts-node/register tests/**/*.test.ts"
  },
  "devDependencies": {
    "@types/node": "^18",
    "@types/vscode": "^1.74.0",
    "eslint": "^8.0.0",
    "mocha": "^10.0.0",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.0",
    "webpack": "^5.0.0",
    "webpack-cli": "^6.0.1"
  }
}
